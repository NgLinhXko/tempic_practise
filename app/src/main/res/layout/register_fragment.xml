<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <com.example.tempic_practice.presentation.widget.header.HeaderView
            android:id="@+id/hvRegisterFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ic_hv_left="@drawable/ic_back"
            app:text_header="@string/register" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="32dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosan_regular"
                android:gravity="center"
                android:text="@string/title_register"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.tempic_practice.presentation.widget.leftrightview.LeftRightView
                android:id="@+id/lrvRegisterWithPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/register_with_phone_number"
                app:ic_left="@drawable/ic_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleRegister" />

            <com.example.tempic_practice.presentation.widget.leftrightview.LeftRightView
                android:id="@+id/lrvRegisterWithKaKaoTalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/register_with_kakao"
                app:ic_left="@drawable/ic_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lrvRegisterWithPhoneNumber" />

            <com.example.tempic_practice.presentation.widget.leftrightview.LeftRightView
                android:id="@+id/lrvRegisterWithNaverId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/register_with_naver"
                app:ic_left="@drawable/ic_naver"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lrvRegisterWithKaKaoTalk" />

            <com.example.tempic_practice.presentation.widget.leftrightview.LeftRightView
                android:id="@+id/lrvRegisterWithGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/register_with_google"
                app:ic_left="@drawable/ic_google"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lrvRegisterWithNaverId" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lrvRegisterWithGoogle">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRegisterHaveAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/have_account" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRegisterLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosan_medium"
                    android:text="@string/login"
                    android:textColor="@color/blue_main" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
